{
  "name": "dotcamp/promoter",
  "description": "Promoter library for DotCamp products.",
  "type": "library",
  "version": "1.0.0",
  "license": "MIT",
  "authors": [
    {
      "name": "Erdem Bircan",
      "email": "erdem.erdembircan@gmail.com"
    }
  ],
  "scripts": {
    "test": "phpunit",
    "lint": "@phpcs-check",
    "lint-fix": "@phpcs-fix",
    "phpcs-check": "phpcs -p --standard=.phpcs.xml --extensions=php __tests__ inc",
    "phpcs-fix": "phpcbf -p --standard=.phpcs.xml --extensions=php __tests__ inc",
    "release": "pnpm run production && composer run test && composer run lint-fix",
    "compress": "git archive master --format zip --output ./dotcamp-promoter.zip"
  },
  "autoload": {
    "psr-4": {
      "DotCamp\\Promoter\\": [
        "inc/",
        "__tests__/php/unit/inc"
      ],
      "DotCamp\\Promoter\\Tests\\": "__tests__/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/phpcompatibility-wp": "*",
    "phpunit/phpunit": "^12.0",
    "brain/monkey": "^2.6"
  },
  "prefer-stable": true
}
